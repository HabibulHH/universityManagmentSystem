<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">

                    <img src="~/Image/Untitled.png" style="width: 20px" />
                </a>

            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    @*<li class="active"><a href="#">Link <span class="sr-only">(current)</span></a></li>
                        <li><a href="#">Link</a></li>*@
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Department<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Save  Department", "DepartmentSave", "Department")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Show Department", "ShowDepartment", "Department")</li>

                            <li role="separator" class="divider"></li>

                        </ul>

                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Teacher<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Save Teacher", "SaveTeacher", "Teacher")</li>
                           
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Assign a Course to Teacher ", "CourseAssignToTeacher", "Teacher")</li>
                            </ul>

                    </li>
                  

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Student<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Register Student", "RegisterStudent", "Student")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Enroll Course", "StudentEnrollInACourse", "Student")</li>
                            
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Give  Students Result ", "StudentResult", "StudentResult")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("View Students Result Card ", "ViewResult", "ViewResult")</li>
                            <li><a href="#"></a></li>
                        </ul>

                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Course<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Show Course Statistics", "ViewCourseStatistics", "Course")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Save a course ", "SaveCourse", "Course")</li>
                            <li role="separator" class="divider"></li>


                        </ul>

                    </li>



                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Clas Room<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Allocate Class Room", "AllocateRoom", "AllocateClassRoom")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Show schedule ", "ShowSchedule", "Schedule")</li>
                            <li role="separator" class="divider"></li>

                        </ul>

                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Unallocation<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("UnAllocate All Classroom", "UnAllocateAllClassroom", "UnAllocateAllClassroom")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("UnAllocate All Course", "UnAllocateAllCourse", "UnAllocateAllCourse")</li>
                            <li role="separator" class="divider"></li>


                        </ul>

                    </li>






                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
    <div class="container body-content">

        @RenderBody()
        <hr/>
        

    </div>
    <footer>
        <p>&copy; See Sharply All rights reserved</p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
