@model UniversityManagmentApp.Models.Teacher
@using System.Collections
@using UniversityManagmentApp.Models


@{
    ViewBag.Title = "SaveTeacher";

}


<style>
    .field-validation-error {
        color: red;
        font-style: italic;
    }
</style>

<div class="row">
    <div class="col-md-6 col-md-offset-3">

        @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <fieldset>
                <legend>Save Teacher</legend>
                @if (ViewBag.msg != null)
                {
                    @ViewBag.msg
                    ;
                }
                <table>
                    <tr>
                        <td>
                            @Html.LabelFor(m => m.Name)
                        </td>
                        <td>
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        </td>
                        <td>
                            @Html.ValidationMessageFor(m => m.Name)
                        </td>
                    </tr>

                    <tr>
                        <td>
                            @Html.LabelFor(m => m.Address)
                        </td>
                        <td>
                            @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                        </td>
                        <td>
                            @Html.ValidationMessageFor(m => m.Address)
                        </td>
                    </tr>


                    <tr>
                        <td>
                            @Html.LabelFor(m => m.Email)
                        </td>
                        <td>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </td>
                        <td>
                            @Html.ValidationMessageFor(m => m.Email)
                        </td>
                    </tr>

                    <tr>
                        <td>
                            @Html.LabelFor(m => m.ContactNo)
                        </td>
                        <td>
                            @Html.TextBoxFor(m => m.ContactNo, new { @class = "form-control" })
                        </td>
                        <td>
                            @Html.ValidationMessageFor(m => m.ContactNo)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.LabelFor(m => m.CreditToBeTaken)
                        </td>
                        <td>
                            @Html.TextBoxFor(m => m.CreditToBeTaken, new { @class = "form-control" })
                        </td>
                        <td>
                            @Html.ValidationMessageFor(m => m.CreditToBeTaken)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.LabelFor(m => m.DepartmentCode)

                        </td>
                        <td>
                            @Html.DropDownListFor(m => m.DepartmentCode, new SelectList(ViewBag.DepartmentBag, "Value", "Text"), new { @class = "form-control" })

                        </td>

                        <td>
                            @Html.ValidationMessageFor(m => m.DepartmentCode)
                        </td>
                    </tr>

                    <tr>
                        <td>
                            @Html.LabelFor(m => m.DesignationId)

                        </td>
                        <td>
                            @Html.DropDownListFor(m => m.DesignationId, new SelectList(ViewBag.DesignationBag, "Value", "Text"), new { @class = "form-control" })

                        </td>
                        <td>
                            @Html.ValidationMessageFor(m => m.DesignationId)
                        </td>
                    </tr>

                    <tr>
                        <td></td>
                        <td>
                            <input type="submit" name="submit" id="submit" value="Save" class="btn btn-success" />
                        </td>
                    </tr>



                </table>
            </fieldset>
        }
    </div>
</div>
   
    @section scripts
    {
        <script src="~/Scripts/jquery-2.2.3.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    }

